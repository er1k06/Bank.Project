using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace BankErik
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("*************Eriks Bank*************");
            Console.WriteLine("::Login Page::");

            //password and username
            string userName = null; string password = null;

            Console.Write("Username:");
            userName=Console.ReadLine();

            if (userName !="")
            {
                Console.Write("Password:");
                password=Console.ReadLine();
            }
            
            if (userName == "system" && password == "menager")
            {
                int mainMenuChoice = -1;
                do
                {
                    
                    Console.WriteLine("\n:::Main menu:::");
                    Console.WriteLine("1. Customers");
                    Console.WriteLine("2. Accounts");
                    Console.WriteLine("3. Funds Transfer");
                    Console.WriteLine("4. Funds Transfer Statement");
                    Console.WriteLine("5. Account Statement");
                    Console.WriteLine("0. Exit");

                    Console.Write("Enter choice:");
                    mainMenuChoice = int.Parse(Console.ReadLine());
                    switch (mainMenuChoice)
                    {
                        case 1:
                            Console.WriteLine("Customers Section");
                            break;
                        case 2:
                            Console.WriteLine("Accounts Section");
                            break;
                        case 3:
                            Console.WriteLine("Funds Transfer Section");
                            break;
                        case 4:
                            Console.WriteLine("Funds Transfer Statement Section");
                            break;
                        case 5:
                            Console.WriteLine("Account Statement Section");
                            break;
                        case 0:
                            Console.WriteLine("Exiting...");
                            break;
                        default:
                            Console.WriteLine("Invalid choice. Please try again.");
                            break;
                    }
                } while (mainMenuChoice!=0);
            }
            else
            {
                 
                Console.WriteLine("Invalid username or password");
            }

                Console.WriteLine("Thank you! Visit again.");
            Console.ReadKey();
        }
    }
}
